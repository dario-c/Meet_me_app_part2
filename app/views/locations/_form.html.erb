<% if @errors %>
<ul>
<% @errors.each do |error| %>
<li> <%= error %> </li>
<% end %>
</ul>
<% end %>


<%= form_for @location do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br/>
  <%= f.label :city %>
  <%= f.text_field :city %> <br/>
  <%= f.label :country %>
  <%= f.text_field :country %> <br/>
  <ul>
    <%= f.fields_for :comments do |comment_form| %>
          <%= comment_form.hidden_field :id %> 
          <li> <%= comment_form.label :text %> </li>
          <li> <%= comment_form.text_field :text %> </li>
    <% end %>
  </ul>
  <%= f.submit "Save" %>
<% end %>