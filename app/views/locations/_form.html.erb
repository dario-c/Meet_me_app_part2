<% if @errors %>
<ul>
<% @errors.each do |error| %>
<li> <%= error %> </li>
<% end %>
</ul>
<% end %>


<%= form_for @location do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br/>
  <%= f.label :city %>
  <%= f.text_field :city %> <br/>
  <%= f.label :country %>
  <%= f.text_field :country %> <br/>
  
 
  <%= f.fields_for :comments do |comment_form| %>
     <ul>   
        <%= comment_form.hidden_field :id %> 
        <li> <%= comment_form.label :text %> </li>
        <li> <%= comment_form.text_field :text %> </li>
          
          <% unless comment_form.object.id == nil%>
            <%= comment_form.label "Delete!" %>
            <%= comment_form.check_box :_destroy %>
          <% end %>
      </ul>         
  <% end %>
 
  <%= f.submit "Save" %>
<% end %>