<h1>Location <%= @location.id %></h1>
<%= @location.name %>:
<%= @location.city %>, <%= @location.country%>
<br/>

<% @location.comments.each do |comment| %>
<%= comment.text %>
<% end %>

<br/>
<button>
	<%= link_to "See Visits", location_visits_path(@location.id) %>
</button>

<button>
	<%= link_to "Back to Locations List", locations_path%>
</button>

